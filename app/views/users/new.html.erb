<div class="row d-flex justify-content-center">
  <div class="col-xl-6 col-lg-9 col-md-11">
  <h1 class="mx-2">Sign Up</h1>

  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
        <%  flash.now[:danger] = msg %>
    <% end %>
  <% end %>
    <%= form_for @user do |f| %>
      <div class="form-group mx-2">
        <%= f.label :nickname, "Username*" %>
        <%= f.text_field :nickname, class: "form-control", required: true %>
      </div>
      
      <div class="form-group mx-2">
        <%= f.label :first_name, "First Name" %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group mx-2">
        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>


  <div class="form-group mx-2">
    <%= f.label :email, "Email*" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="form-group mx-2">
    <%= f.label :password, "Password*" %>
    <%= f.password_field :password, class: "form-control", minlength: "6", require: true %>
  </div>
  <div class="form-group mx-2">
    <%= f.label :password_confirmation, "Confirm Password*" %>
    <%= f.password_field :password_confirmation, class: "form-control", minlength: "6", require: true %>
  </div>
  <%= f.submit 'Sign Up', class: "btn btn-primary mx-2" %>
<% end %>
</div>
</div>
